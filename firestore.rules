rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /applications/{applicationId} {
      allow create: if request.auth != null && request.resource.data.email == request.auth.token.email;
      allow read: if request.auth != null && (resource.data.email == request.auth.token.email || request.auth.token.email == 'admin@loanease.com');
      allow update, delete: if false;
    }
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

